<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:paddingLeft="60dp"
    android:paddingRight="60dp"
    android:background="@color/navTopGray">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="29dp"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/step_3"
        android:id="@+id/textView3"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="0dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="45dp"
        android:layout_alignParentTop="true"
        android:textSize="15sp" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/tut_title_4"
        android:id="@+id/textView"
        android:layout_below="@id/textView3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/tut_text_4"
        android:id="@+id/textView2"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:lines="2"
        android:layout_above="@+id/tut_finished_button"
        android:layout_marginBottom="37dp"
        android:layout_centerHorizontal="true"
        android:textSize="13sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_below="@id/textView"
        android:layout_above="@id/textView2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/tut_use"
        android:contentDescription="@string/dummy" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="@string/tut_done"
        android:id="@+id/tut_finished_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:background="@color/Orange"
        android:stateListAnimator="@null"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="15dp"/>

</RelativeLayout>